<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Label para el campo de entrada -->
    <TextView
        android:id="@+id/tvLabelIncrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese el valor de incremento/decremento:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Campo de entrada para el paso -->
    <EditText
        android:id="@+id/etStepValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Ej.: 5"
        android:inputType="number"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"/>

    <!-- Texto del contador -->
    <TextView
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:layout_marginBottom="24dp"/>

    <!-- Botones para incrementar y decrementar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnDecrementar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:textSize="24sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FF6F61"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnIncrementar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>
